<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ActionBar">
        <item name="android:colorPrimary">#E5006A</item>
    </style>

    <style name="heading">
        <item name="android:textColor">@color/colorFontPrimary</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="secondary_heading">
        <item name="android:textColor">@color/colorFontSecondary</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>
</resources>
